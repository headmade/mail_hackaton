= form_for @collage do |f|
  - if @collage.errors.any?
    #error_explanation
      %h2= "#{pluralize(@collage.errors.count, "error")} prohibited this collage from being saved:"
      %ul
        - @collage.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :photos
    = f.text_field :photos
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
